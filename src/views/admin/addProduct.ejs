    <script>

        //  to show image uploaded image preview
        function previewImage(event) {

            const previewContainer = document.getElementById('imgPreview') ;

            const files = Array.from(event.target.files);
            const output = document.getElementById('previewContainer');

            
    
            files.forEach((file,index)=>{ 

                console.log(file) 

                const reader = new FileReader();

                reader.onload = function() {
                    const imagePreview = document.createElement("div") ;
                    const template = `
                            <img id="preview" src="${reader.result}" alt="Preview" style="width: 100px; height: auto ; ">  
                                 
                      `

                    imagePreview.innerHTML = template ;   
                    output.appendChild(imagePreview) ;
                    previewContainer.classList.remove('d-none') ;
                };
                reader.readAsDataURL(file);
            }) ;
            
        }

        
        // for uploading images
        $('#addProductForm').submit( async function (e) {
            e.preventDefault() ;
            console.log('submit button clickedd') ;

