    <script>
        // for delete product
        function deleteProduct(productId, button) {
            const row = $(button).closest('tr'); // Get the row element where the delete button is located
            
            // Show confirmation dialog before proceeding
            // if (!confirm("Are you sure you want to delete this product?")) {
            //     return;
            // }

            // Send AJAX request to delete the product
            $.ajax({
                url: `/admin/product/delete/${productId}`,
                method: 'DELETE',
                success: (response) => {
                    if (response.productDelete) {
                        toastr.success("Product deleted successfully", {
                            closeButton: true,
                            progressBar: true,
                            timeOut: 3000
                        });
                        row.remove(); // Remove the product row from the table
                    } else {
                        toastr.error('Failed to delete the product.', 'Error', {
                            closeButton: true,
                            progressBar: true,
                            timeOut: 3000
                        });
                    }
                },
                error: function() {
                    toastr.error('An error occurred while deleting the product.', 'Error', {
                        closeButton: true,
                        progressBar: true,
                        timeOut: 3000
                    });
                }
            });
        }


    </script>
   
