  <div class="signup mx-auto">
      <div class="wrapper">
         <div class="title">
            Enter OTP
         </div>

         <!-- form for OTP entering -->
         <form id="otpForm" >
            <div class="field">
               <input name="otp" type="text" required>
               <label>enter OTP</label>
            </div>

             <div class="field">
